{
  "compilerOptions": {
    "target": "esnext",                          
    "module": "commonjs",                     
    "lib": ["ESNext"],                             
    "outDir": "./dist",                        
    "isolatedModules": false,               
    "strict": false,                           
    "baseUrl": "./",                       
    "paths": {
      "@/*": ["./*"]
    },
    "esModuleInterop": true,                  
  },
  "exclude": ["node_modules"],
  "include": ["@types/*"]
}
