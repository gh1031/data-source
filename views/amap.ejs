<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <script type="text/javascript" src="https://webapi.amap.com/maps?v=1.4.15&key=e7cea6b0cb5030eb6bdb52c91969c5f4"></script>
  <style>
    html, body {
      height: 100%;
    }
    * {
      margin: 0;
      padding: 0;
    }
    .amap {
      height: 100%;
      position: relative;
    }
    #container {
      width: 100%;
      height: 100%;
    }
    .action {
      width: 100px;
      height: 100%;
      position: absolute;
      left: 0;
      top: 0;
      z-index: 10;
    }
    .action li {
      line-height: 24px;
      text-align: center;
      color: #fff;
      cursor: pointer;
      margin-bottom: 4px;
      background-color: rgba(0,0,0, .2);
    }
  </style>
</head>
<body>
  <div class="amap">
    <ul class="action">
      <li>1</li>
      <li>2</li>
      <li>3</li>
    </ul>
    <div id="container"></div>
    <div><%= jobs %></div>
  </div>
  <script>
    // 经纬度
    const hz = [120.16323671127321, 30.27102081842716];
    const center = new AMap.LngLat(120.16323671127321, 30.27102081842716) || hz;
    const map = new AMap.Map('container', {
      center,
      zoom: 11.5,
    });
    // 折线路径
    // const path = [[116,39], [116,40], [117,39]] || [new AMap.LngLat(116, 39), new AMap.LngLat(120, 49), new AMap.LngLat(96, 39)]
    // const polyline = new AMap.Polyline({ path })
    // map.add(polyline)

    // const offset  = new AMap.Pixel(-16,-30);
    // const marker = new AMap.Marker({
    //     offset:offset,
    //     icon:'xxx.png',
    // });
    // map.add(marker);
    // 
    const circle = new AMap.CircleMarker({
      center: [120.06879,30.300517],
      radius: 5 + Math.random() * 10, // 3D视图下，CircleMarker半径不要超过64px
      strokeColor: 'yellow',
      strokeWeight: 2,
      strokeOpacity: 0.5,
      fillColor:'red',
      zIndex:10,
      bubble:true,
      cursor:'pointer',
      clickable: true
    })
    circle.setMap(map)
  </script>
</body>
</html>
